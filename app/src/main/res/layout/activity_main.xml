<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/outcome"
        android:layout_width="268dp"
        android:layout_height="30dp"
        android:layout_marginTop="359dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="73dp" />

    <TextView
        android:id="@+id/c_weapon"
        android:layout_width="265dp"
        android:layout_height="25dp"
        android:layout_marginTop="333dp"
        android:text="Computer's Weapon:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/p_weapon"
        android:layout_width="265dp"
        android:layout_height="26dp"
        android:layout_marginTop="307dp"
        android:text="Player's Weapon: "
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="356dp"
        android:layout_height="36dp"
        android:layout_marginTop="76dp"
        android:autoText="false"
        android:text="Please choose your weapon:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_scissors"
        android:layout_width="419dp"
        android:layout_height="47dp"
        android:layout_marginTop="212dp"
        android:text="Scissors"
        app:backgroundTint="#CACACA"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-4dp" />

    <Button
        android:id="@+id/b_paper"
        android:layout_width="423dp"
        android:layout_height="45dp"
        android:layout_marginTop="164dp"
        android:text="Paper"
        app:backgroundTint="#CACACA"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-5dp" />

    <TextView
        android:layout_width="353dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Welcome to Rock-Paper-Scissors!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_rock"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginTop="108dp"
        android:text="Rock"
        app:backgroundTint="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/b_paper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-5dp" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="264dp"
        android:layout_height="26dp"
        android:layout_marginTop="281dp"
        android:text="Player: 0, Computer: 0"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="75dp" />

</androidx.constraintlayout.widget.ConstraintLayout>